<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_bg">


    <TextView
        android:id="@+id/target_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/quicksand_regular"
        android:text="@string/g_day_target"
        android:layout_marginTop="25dp"
        android:textColor="@color/text_white"
        android:textSize="15sp"
        android:layout_marginHorizontal="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/settarget"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:backgroundTint="@color/colorAccent"
        android:paddingTop="15dp"
        android:textColor="@color/text_dark"
        android:textSize="20sp"
        android:text="1500"
        android:inputType="number"
        android:gravity="center_horizontal"
        android:fontFamily="@font/quicksand_medium"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/target_title" />

    <TextView
        android:id="@+id/confirm_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/quicksand_medium"
        android:padding="10dp"
        android:text="@string/g_confirm"
        android:layout_marginTop="15dp"
        android:textColor="@color/text_orange"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settarget" />





</androidx.constraintlayout.widget.ConstraintLayout>